{{#section 'scripts'}}
  <script type="text/javascript">
    //passwords match
    const password = document.getElementById("password");
    const confirm_password = document.getElementById("password_confirmation");
    const form = document.getElementById('form_user_register')

    const validateMatchPasswords = ()=>{
      if(password.value != confirm_password.value) {
        confirm_password.setCustomValidity("Passwords Don't Match")
        
      } else {
        confirm_password.setCustomValidity('');
      }
    }

    window.addEventListener('load', ()=>{
        
        confirm_password.addEventListener('keyup', ()=>validateMatchPasswords()) 

    })
    

  </script>
{{/section}}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                Register
            </div>

            <div class="card-body">
                <form method="POST" action="register" id="form_user_register">

                    <div class="form-group row">
                        <label for="email" class="col-md-4 col-form-label text-md-right">E-Mail Address</label>

                        <div class="col-md-6">
                            <input id="email" type="email" class="form-control {{#if errors.email}} is-invalid {{/if}}" name="email" value="{{#if auth}} {{auth.email}} {{else}} {{#if dataForm.email}} {{dataForm.email}} {{/if}} {{/if}} " required autocomplete="email">

                            {{#if errors.email}}
                                <span class="invalid-feedback" role="alert">
                                    <strong>{{errors.email}}</strong>
                                </span>
                            {{/if}}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="password" class="col-md-4 col-form-label text-md-right">Password</label>

                        <div class="col-md-6">
                            <input id="password" type="password" data-msg="Please fill this field" class="form-control {{#if errors.password}} is-invalid {{/if}}" name="password"  required='required' autocomplete="new-password">
                            {{#if errors.password}}
                                <span class="invalid-feedback" role="alert">
                                    <strong> {{errors.password}} </strong>
                                </span>
                            {{/if}}
                        </div>
                    </div>

                    <div class="form-group row" id="password_confirmed" >
                        <label for="password_confirmation" class="col-md-4 col-form-label text-md-right">Confirm Password</label>

                        <div class="col-md-6">
                            <input id="password_confirmation" type="password" class="form-control" name="password_confirmation"  required='required' autocomplete="new-password">
                        </div>
                    </div>

                    <div class="form-group row mb-0">
                        <div class="col-md-6 offset-md-4">
                          <button type="submit" class="btn btn-primary ">
                            
                              Register

                          </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
